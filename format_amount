def format_amount(amount):
    result = 0
    while True:
        try:
            print("Please enter a valid number.")
            result = "${:,.2f}".format(float(input(amount)))
            
        except ValueError:
            if result != float():
                print("Please enter a valid number.")
                result = "${:,.2f}".format(float(input(amount)))
      
        else:
             return result


            
amount_spent = format_amount("Enter spending amount")
print(amount_spent)

